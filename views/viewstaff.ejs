<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Staff</title>

  <script src="/staffAjax.js" defer></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    /* body {
      background-color: #fff8f0;
      padding: 40px 20px;
    } */

    .container {
      max-width: 1100px;
      margin: auto;
    }

    .page-title {
      text-align: center;
      color: #fc8019;
      font-size: 2.2rem;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .summary {
      background-color: #fff3e0;
      padding: 12px 18px;
      border-left: 5px solid #fc8019;
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 30px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      gap: 10px;
      color: #444;
    }

    .summary i {
      color: #fc8019;
    }

    .search-bar {
      display: flex;
      justify-content: center;
      margin-bottom: 25px;
    }

    .search-bar input {
      width: 100%;
      max-width: 400px;
      padding: 12px 16px;
      border-radius: 8px;
      border: 1.5px solid #ccc;
      font-size: 15px;
      transition: border-color 0.3s;
    }

    .search-bar input:focus {
      border-color: #fc8019;
      outline: none;
    }

    .table-wrapper {
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      padding: 20px;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background-color: #fc8019;
      color: white;
    }

    th, td {
      text-align: center;
      padding: 14px;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background-color: #fff3e0;
    }

    .staff-img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 8px;
    }

    .staff-name {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn {
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      color: white;
      font-size: 14px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .btn-warning {
      background-color: #f7b500;
    }

    .btn-warning:hover {
      background-color: #e7a000;
    }

    .btn-danger {
      background-color: #d9534f;
    }

    .btn-danger:hover {
      background-color: #c9302c;
    }

    .alert {
      text-align: center;
      background-color: #ffe3b3;
      padding: 14px;
      border-radius: 8px;
      font-weight: 600;
      color: #555;
    }

    @media (max-width: 600px) {
      th, td {
        padding: 10px 6px;
        font-size: 13px;
      }

      .btn {
        font-size: 12px;
        padding: 5px 10px;
      }

      .staff-name {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>

  <div class="container">

    <h1 class="page-title"><i class="fas fa-users"></i> All Staff Members</h1>

    <div class="summary">
      <i class="fas fa-chart-bar"></i>
      Total Staff Members: <%= data.length %>
    </div>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search staff..." onkeyup="searchStaff(this.value)" />
    </div>

    <div class="table-wrapper">
      <% if (data.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th><i class="fas fa-user"></i> Name</th>
              <th><i class="fas fa-envelope"></i> Email</th>
              <th><i class="fas fa-phone"></i> Contact</th>
              <th><i class="fas fa-money-bill-wave"></i> Salary (â‚¹)</th>
              <th><i class="fas fa-cogs"></i> Actions</th>
            </tr>
          </thead>
          <tbody id="searchStaff">
            <% data.forEach(function(staff, index) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td class="staff-name">
                  
                  <%= staff.name %>
                </td>
                <td><%= staff.email %></td>
                <td><%= staff.contact_no %></td>
                <td><%= staff.salary %></td>
                <td>
                  <a href="/updatestaff?id=<%= staff.staff_id %>" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Update
                  </a>
                  <a href="/deletestaff?id=<%= staff.staff_id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this staff member?')">
                    <i class="fas fa-trash-alt"></i> Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="alert"><i class="fas fa-info-circle"></i> No staff found</div>
      <% } %>
    </div>
  </div>

</body>
</html>
