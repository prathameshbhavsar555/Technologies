<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Category Table</title>
</head>
<body>

<section>
  <table border="1" style="width: 60%; margin: 20px auto; text-align: center;">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.length === 0) { %>
        <tr>
          <td colspan="4">
            <h3>Oops, there is no data</h3>
          </td>
        </tr>
      <% } else {
        data.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.name %></td>
            <td>
              <a href="/updatecategory?id=<%= item.id %>">Update</a>
            </td>
            <td>
              <a href="/deletecategory?id=<%= item.id %>">Delete</a>
            </td>
          </tr>
      <% }) } %>
    </tbody>
  </table>
</section>

</body>
</html>
