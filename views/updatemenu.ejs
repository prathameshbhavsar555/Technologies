<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Category</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 80px;
        }

        .form-container {
            max-width: 500px;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-heading {
            font-weight: bold;
            font-size: 1.8rem;
            margin-bottom: 20px;
            text-align: center;
            color: #343a40;
        }
    </style>
</head>

<body>

    <div class="container d-flex justify-content-center">
        <div class="form-container">
            <h2 class="form-heading">Update meanu</h2>

            <form action="/updateMenuHandler" method="POST" enctype="multipart/form-data">
                <!-- Hidden input for Category ID -->
                <input type="hidden" name="id" value="<%= data.id %>">

                <div class="mb-3">
                    <label for="name" class="form-label">meanu Name</label>
                    <input type="text" class="form-control" id="item_name" name="item_name"
                        value="<%= data.item_name %>" required>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Category</label>
                    <select class="form-select" id="category_id" name="category_id" required>
                        <option value="" disabled>Select a category</option>
                       <% categories.forEach(catg => { %>
                          <option value="<%= catg.id %>" <%= catg.id == data.category_id ? 'selected' : '' %>><%= catg.name %></option>

                            <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price (â‚¹)</label>
                    <input type="number" step="0.01" class="form-control" id="price" name="price"
                        value="<%= data.price %>" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"
                        required><%= data.description %></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Image</label><br>
                    <img src="/uploads/<%= data.image %>" alt="Menu Image" style="max-width: 100px; height: auto;">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image (optional)</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                </div>

                <button type="submit" class="btn btn-success w-100">Update Menu</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>