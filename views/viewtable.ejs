<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dining Table List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="/tableAjax.js"></script>

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>

    .container44{
      margin-top: 20px;
      font-family: 'Inter', sans-serif;
    }

    h2 {
      font-weight: 600;
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }

    .search-wrapper {
      max-width: 400px;
      margin: 0 auto 30px auto;
    }

    .search-input {
      border-radius: 30px;
      padding: 10px 20px 10px 40px;
      border: 1px solid #ccc;
      width: 100%;
      box-shadow: 0 0 5px rgba(0,0,0,0.05);
      background-image: url('https://img.icons8.com/ios-glyphs/30/search--v1.png');
      background-repeat: no-repeat;
      background-position: 10px center;
      background-size: 20px;
    }

    .table-box {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .table thead th {
      background-color: #fc8019;
      color: #fff;
      font-weight: 600;
      text-align: center;
    }

    .table tbody td {
      vertical-align: middle;
      text-align: center;
    }

    .badge-success {
      background-color: #28a745;
    }

    .badge-danger {
      background-color: #dc3545;
    }

    .action-icons a {
      font-size: 18px;
      margin: 0 8px;
    }

    .action-icons a:hover {
      transform: scale(1.1);
    }
  </style>
</head>

<body>

  <div class="container44">
    <h2 class="text-center mb-4">
      <i class="fas fa-chair me-2 text-warning"></i>Dining Table List
    </h2>
    <div class="input-group search-wrapper">
   <span class="input-group-text bg-white border-end-0">
     </span>
  <input type="text" id="searchInput" class="form-control border-start-0 search-input" placeholder="Search table..." onkeyup="searchtable(this.value)" />
  </div>
    <div class="table-box">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th><i class="fas fa-hashtag me-1"></i>Table ID</th>
            <th><i class="fas fa-users me-1"></i>Capacity</th>
            <th><i class="fas fa-check-circle me-1"></i>Availability</th>
            <th><i class="fas fa-cogs me-1"></i>Actions</th>
          </tr>
        </thead>
        <tbody id="searchtable">
          <% if (data.length > 0) { %>
            <% data.forEach(row => { %>
              <tr>
                <td><%= row.table_id %></td>
                <td><%= row.capacity %></td>
                <td>
                  <% if (row.availability_status === 'Available') { %>
                    <span class="badge bg-success">Available</span>
                  <% } else { %>
                    <span class="badge bg-danger">Occupied</span>
                  <% } %>
                </td>
                <td class="action-icons">
                  <a href="/updatetable?id=<%= row.table_id %>" class="text-primary" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/deletetable?id=<%= row.table_id %>" class="text-danger" onclick="return confirm('Are you sure you want to delete this table?');" title="Delete">
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No dining tables found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
