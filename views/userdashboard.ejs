<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    :root {
      --bg-light: #ffffff;
      --sidebar-bg: #f8f9fa;
      --hover-bg: #e9ecef;
      --text-dark: #333;
      --primary: #d8b51c;
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background: var(--bg-light);
      color: var(--text-dark);
      height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .navbar {
      background: var(--bg-light);
      padding: 1rem 2rem;
      border-bottom: 1px solid #ddd;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .navbar h1 {
      font-size: 1.4rem;
      color: var(--primary);
    }

    .toggle-btn {
      display: none;
      font-size: 1.5rem;
      cursor: pointer;
    }

    .dashboard {
      display: flex;
      flex: 1;
      overflow: hidden;
    }

    .sidebar {
      width: 260px;
      background: var(--sidebar-bg);
      height: calc(100vh - 65px);
      overflow-y: auto;
      transition: var(--transition);
    }

    .sidebar h2 {
      text-align: center;
      padding: 1rem;
      color: var(--primary);
    }

    .menu-item {
      padding: 1rem 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      transition: var(--transition);
    }

    .menu-item:hover {
      background: var(--hover-bg);
    }

    .submenu {
      display: none;
      background: #f1f3f5;
    }

    .submenu a {
      display: block;
      padding: 0.8rem 2.5rem;
      font-size: 0.95rem;
      color: #555;
      text-decoration: none;
    }

    .submenu a:hover {
      color: var(--primary);
    }

    .main-content {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      .toggle-btn {
        display: block;
      }

      .sidebar {
        position: fixed;
        top: 65px;
        left: -260px;
        z-index: 1000;
        height: calc(100vh - 65px);
        box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      }

      .sidebar.active {
        left: 0;
      }

      .main-content {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>

  <div class="navbar">
    <h1>Restaurant Staff</h1>
    <i class="fas fa-bars toggle-btn" id="toggleSidebar"></i>
  </div>

  <div class="dashboard">
    <div class="sidebar" id="sidebar">
      <h2>Staff Panel</h2>

      <div class="menu-item" onclick="toggleMenu('menuMenu')">
        <span><i class="fas fa-utensils"></i> Menu</span>
        <i class="fas fa-chevron-down"></i>
      </div>
      <div class="submenu" id="menuMenu">
        <a href="#">Add Menu</a>
        <a href="#">View Menu</a>
      </div>

      <div class="menu-item" onclick="toggleMenu('tableMenu')">
        <span><i class="fas fa-chair"></i> Tables</span>
        <i class="fas fa-chevron-down"></i>
      </div>
      <div class="submenu" id="tableMenu">
        <a href="#">Add Table</a>
        <a href="#">View Table</a>
      </div>

      <div class="menu-item">
        <span><i class="fas fa-receipt"></i> Orders & Bills</span>
      </div>

      <div class="menu-item">
        <span><i class="fas fa-user-cog"></i> Staff Profile</span>
      </div>

      <div class="menu-item">
        <span><i class="fas fa-sign-out-alt"></i> Logout</span>
      </div>
    </div>

    <div class="main-content">
      <h2>Welcome Staff üçΩÔ∏è</h2>
    </div>
  </div>

  <script>
    const toggleBtn = document.getElementById('toggleSidebar');
    const sidebar = document.getElementById('sidebar');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });

    function toggleMenu(id) {
      document.querySelectorAll('.submenu').forEach(menu => {
        if (menu.id !== id) menu.style.display = 'none';
      });

      const target = document.getElementById(id);
      target.style.display = target.style.display === 'block' ? 'none' : 'block';
    }
  </script>

</body>
</html>
