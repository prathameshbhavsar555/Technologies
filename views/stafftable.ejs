<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dining Tables - Foodies Kitchen</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
     * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }
    .main {
      flex: 1;
      padding: 40px;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    .section {
      flex: 1;
      min-width: 300px;
    }
    h3 {
      font-size: 18px;
      margin-bottom: 20px;
      font-weight: 600;
    }
    .table-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }
    .table-card {
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      text-align: center;
    }
    .table-card h4 {
      font-size: 16px;
      margin-bottom: 5px;
    }
    .table-card p {
      font-size: 14px;
      color: #666;
      margin-bottom: 10px;
    }
    .table-card button {
      background-color: #FF5722;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
    }
    .table-card button:hover {
      background-color: #e64a19;
    }
  </style>
</head>
<body>
  <div class="main">
    <div class="section">
      <h3>Available Tables</h3>
      <div class="table-grid">
        <% tables.filter(t => t.availability_status === 'Available').forEach(table => { %>
          <div class="table-card">
            <h4>Table - <%= table.table_id %></h4>
            <p>Capacity: <%= table.capacity %> people</p>
          <a href="/create-order/<%= table.table_id %>/<%= staff_id %>" class="btn btn-warning">Take Order</a>


          </div>
        <% }) %>
      </div>
    </div>

    <div class="section">
      <h3>Occupied Tables</h3>
      <div class="table-grid">
        <% tables.filter(t => t.availability_status === 'Occupied').forEach(table => { %>
          <div class="table-card">
            <h4>Table - <%= table.table_id %></h4>
            <p>Capacity: <%= table.capacity %> people</p>
            <button>Take Order</button>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
