<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Swiggy Menu</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background-color: #f9f9f9;
      color: #333;
    }

    .container {
      display: flex;
      padding: 20px;
      gap: 20px;
    }

    .main {
      flex: 3;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .back-btn {
      background: #ff6600;
      color: white;
      padding: 8px 16px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: bold;
    }

    .search-bar input {
      width: 300px;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .menu-section h2 {
      text-align: center;
      font-size: 26px;
      margin-bottom: 6px;
    }

    .menu-section p {
      text-align: center;
      color: #777;
      margin-bottom: 16px;
    }

    .categories {
      text-align: center;
      margin-bottom: 20px;
    }

    .categories button {
      background: #eee;
      border: none;
      padding: 8px 16px;
      margin: 5px;
      border-radius: 20px;
      cursor: pointer;
      transition: 0.3s ease;
      font-size: 15px;
    }

    .categories button.active,
    .categories button:hover {
      background: #ff6600;
      color: white;
    }

    .content {
      display: flex;
      gap: 20px;
    }

    .menu-cards {
      flex: 3;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      overflow: hidden;
      text-align: center;
      padding: 15px;
      transition: transform 0.3s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 10px;
    }

    .card h4 {
      margin: 10px 0 5px;
      font-size: 18px;
    }

    .card p {
      margin: 0 0 8px;
      font-weight: 500;
    }

    .card input[type="number"] {
      width: 60px;
      padding: 4px;
      border-radius: 4px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
    }

    .card button {
      background: #ff6600;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .order-panel {
      flex: 1;
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .order-panel h3 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .order-box {
      background: #f4f4f4;
      padding: 10px;
      border-radius: 8px;
      margin-bottom: 8px;
    }

    .total-box {
      margin-top: 10px;
      padding: 10px;
      background: #fefefe;
      border-top: 1px solid #ddd;
    }

    .confirm-btn {
      background: #28a745;
      color: white;
      padding: 10px;
      width: 100%;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      margin-top: 10px;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <section class="container">

    <div class="main">

      <!-- Top Bar -->
      <div class="top-bar">
        <a href="/stafftable" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back to Dinning Table</a>
        <div class="search-bar">
          <input type="text" id="searchInput" placeholder=" üîç Search menu...">
        </div>
      </div>

      <!-- Menu Section -->
      <div class="menu-section">
        <h2> üçΩÔ∏è Our Menu </h2>
        <p>Delicious meals prepared fresh for you</p>

        <div class="categories">
          <button class="active" onclick="filterCategory('all')">üçΩÔ∏è All</button>
          <button onclick="filterCategory('Breakfast')">üç≥ Breakfast</button>
          <button onclick="filterCategory('Lunch')">üçõ Lunch</button>
          <button onclick="filterCategory('Dinner')">üç≤ Dinner</button>
        </div>
      </div>

      <!-- Menu Cards -->
      <div class="content">
        <div class="menu-cards" id="menuCards">
          <% menus.forEach(menu => { %>
            <div class="card" data-name="<%= menu.item_name.toLowerCase() %>" data-category="<%= menu.category %>">
              <img src="/uploads/<%= menu.image %>" alt="<%= menu.item_name %>">

              <h4><%= menu.item_name %></h4>
              <p>‚Çπ<%= menu.price %></p>

              <form action="/add-to-order" method="POST">
                <input type="hidden" name="orderId" value="<%= orderId %>">
                <input type="hidden" name="menu_id" value="<%= menu.id %>">
                <input type="hidden" name="price" value="<%= menu.price %>">
                <input type="number" name="qty" value="1" min="1" required>
                <button type="submit">Add</button>
              </form>
            </div>
          <% }) %>
        </div>

        <!-- Order Panel -->
        <div class="order-panel">
  <h3>Current Order</h3>
  <p><strong>Table ID:</strong> <%= orderId %></p>
  <p><strong>Date:</strong> <%= date %></p>

  <hr style="margin: 10px 0;">

  <p><strong>Order Items:</strong></p>

  <% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="order-box">
        <p><strong><%= order.item_name %></strong></p>

        <form action="/update-qty" method="POST" style="display: flex; align-items: center; gap: 6px; margin-bottom: 5px;">
          <input type="hidden" name="order_item_id" value="<%= order.order_item_id %>">
          <input type="hidden" name="order_id" value="<%= order.order_id %>">

          <button type="submit" name="action" value="decrement" style="background-color: #ff6600; color: white; border: none; border-radius: 4px; padding: 2px 8px;">‚àí</button>
          <span><%= order.quantity %></span>
          <button type="submit" name="action" value="increment" style="background-color: #ff6600; color: white; border: none; border-radius: 4px; padding: 2px 8px;">+</button>
        </form>

        <p>‚Çπ<%= order.total_amt %></p>

        <form action="/remove-item" method="POST">
          <input type="hidden" name="order_item_id" value="<%= order.order_item_id %>">
          <button type="submit" style="background: none; border: none; color: red; cursor: pointer;">üóë Cancel</button>
        </form>
      </div>
    <% }) %>

    <div class="total-box">
      <p><strong>Total: ‚Çπ<%= Number(total).toFixed(2) %><
        /strong></p><form action="/confirm-order" method="POST">
  <input type="hidden" name="orderId" value="<%= orderId %>">
  <button type="submit" class="confirm-btn">Confirm Order</button>
</form>
    </div>
  <% } else { %>
    <p>No items added yet.</p>
  <% } %>
</div>
      </div>
    </div>

  </section>

  <script>
    // Search Functionality
    const searchInput = document.getElementById("searchInput");
    const cards = document.querySelectorAll(".card");

    searchInput.addEventListener("input", function () {
      const value = this.value.toLowerCase();
      cards.forEach(card => {
        const name = card.getAttribute("data-name");
        card.style.display = name.includes(value) ? "block" : "none";
      });
    });

    // Category Filter
    function filterCategory(category) {
      document.querySelectorAll(".categories button").forEach(btn => btn.classList.remove("active"));
      event.target.classList.add("active");

      cards.forEach(card => {
        const cardCategory = card.getAttribute("data-category");
        if (category === "all" || cardCategory === category) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    }
  </script>
</body>
</html>
