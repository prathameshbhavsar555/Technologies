<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Foodies Kitchen</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  
</head>
<body>

  <div class="header">
    Welcome to <strong>Admin Dashboard</strong>
  </div>

  <div class="dashboard">

    <!-- Total Categories -->
    <div class="card">
      <div class="icon"><i class="fa-solid fa-layer-group"></i></div>
      <h4>Total Categories</h4>
      <div class="count">3</div>
    </div>

    <!-- Total Menus -->
    <div class="card">
      <div class="icon"><i class="fa-solid fa-utensils"></i></div>
      <h4>Total Menus</h4>
      <div class="count">5</div>
    </div>

    <!-- Total Tables -->
    <div class="card">
      <div class="icon"><i class="fa-solid fa-chair"></i></div>
      <h4>Total Tables</h4>
      <div class="count">9</div>
      <div class="tags">
        <span class="tag available">Available: 9</span>
        <span class="tag occupied">Occupied: 0</span>
      </div>
    </div>

    <!-- Total Orders -->
    <div class="card">
      <div class="icon"><i class="fa-solid fa-clipboard-list"></i></div>
      <h4>Total Orders</h4>
      <div class="count">7</div>
      <div class="tags">
        <span class="tag completed">Completed: 6</span>
        <span class="tag pending">Pending: 1</span>
      </div>
    </div>

  </div>

</body>
</html>
