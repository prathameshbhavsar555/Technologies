<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Menus</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    .container1{
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f7f7f7;
      color: #333;
      padding: 40px 20px;
    }

    .container {
      max-width: 1200px;
      margin: auto;
    }

    .page-title {
      font-family: 'Playfair Display', serif;
      font-size: 3rem;
      text-align: center;
      color: #d4af37;
      margin-bottom: 40px;
    }

    .category-filters {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 15px;
      margin-bottom: 25px;
    }

    .category-filters button {
      padding: 10px 20px;
      font-size: 14px;
      border: 1px solid #d4af37;
      border-radius: 30px;
      background-color: white;
      color: #d4af37;
      cursor: pointer;
      transition: 0.3s;
    }

    .category-filters button.active,
    .category-filters button:hover {
      background-color: #d4af37;
      color: white;
    }

    .search-bar {
      display: flex;
      justify-content: center;
      position: relative;
      margin-bottom: 30px;
    }

    .search-bar input {
      width: 100%;
      max-width: 450px;
      padding: 12px 16px 12px 42px;
      border-radius: 12px;
      border: 1px solid #ccc;
      background-color: #fff;
      color: #333;
      font-size: 16px;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.05);
    }

    .search-bar i {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
    }
.menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .menu-card {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .menu-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  .menu-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #eee;
  }

  .menu-content {
    display: flex;
    flex-direction: column;
    padding: 16px 20px;
    gap: 6px;
  }

  .menu-title {
    font-size: 18px;
    font-weight: 600;
    color: #d4af37;
  }

  .menu-category::before {
    content: attr(data-icon) " ";
  }

  .menu-category {
    font-size: 14px;
    color: #888;
  }

  .menu-description {
    font-size: 14px;
    color: #444;
    line-height: 1.5;
    margin-top: 8px;
  }

  .menu-price {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-top: 12px;
  }

  .action-buttons {
    margin-top: 14px;
    display: flex;
    gap: 10px;
  }

  .action-buttons a {
    font-size: 13px;
    padding: 6px 14px;
    border-radius: 6px;
    text-decoration: none;
    color: #fff;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: 0.2s;
  }

  .btn-update {
    background-color: #ffc107;
  }

  .btn-update:hover {
    background-color: #e0a800;
  }

  .btn-delete {
    background-color: #dc3545;
  }

  .btn-delete:hover {
    background-color: #c82333;
  }

    .alert-info {
      text-align: center;
      margin-top: 30px;
      color: #999;
    }
  </style>
</head>

<body>
  <section class="container1">
    <div class="container">
    <h1 class="page-title">üçΩÔ∏è Explore Our Menu</h1>

    <!-- Category Filter -->
    <div class="category-filters">
      <button class="active" onclick="filterCategory('All')">All</button>
      <button onclick="filterCategory('Breakfast')">Breakfast</button>
      <button onclick="filterCategory('Lunch')">Lunch</button>
      <button onclick="filterCategory('Dinner')">Dinner</button>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Search by item..." onkeyup="searchMenu(this.value)" />
    </div>

    <!-- Menu Cards -->
    <div class="menu-grid">
      <% if (data.length > 0) { %>
        <% data.forEach(function(item) { %>
          <div class="menu-card menu-item" data-category="<%= item.category_name %>">
            <img src="/uploads/<%= item.image %>" class="menu-image" alt="menu image" />
            <div class="menu-content">
              <div class="menu-title"><%= item.item_name %></div>
             <% 
  let icons = {
    'Breakfast': 'üç≥',
    'Lunch': 'üçõ',
    'Dinner': 'üçΩÔ∏è'
  };
%>
<div class="menu-category" data-icon="<%= icons[item.category_name] || '' %>"><%= item.category_name %></div>

              <div class="menu-description"><%= item.description %></div>
              <div class="menu-price">‚Çπ<%= item.price %></div>
              <div class="action-buttons">
                <a href="/updatemenus?id=<%= item.id %>" class="btn-update"><i class="fas fa-edit"></i> Edit</a>
                <a href="/deletemenus?id=<%= item.id %>" class="btn-delete" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt"></i> Delete</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="alert-info">No menu items available.</div>
      <% } %>
    </div>
  </div>
  </section>
  <script>
    function filterCategory(category) {
      const cards = document.querySelectorAll('.menu-item');
      document.querySelectorAll('.category-filters button').forEach(btn => btn.classList.remove('active'));
      event.target.classList.add('active');

      cards.forEach(card => {
        const cat = card.getAttribute('data-category');
        if (category === 'All' || cat === category) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    }

    function searchMenu(value) {
      const cards = document.querySelectorAll('.menu-item');
      const term = value.toLowerCase();

      cards.forEach(card => {
        const text = card.innerText.toLowerCase();
        card.style.display = text.includes(term) ? '' : 'none';
      });
    }
  </script>
</body>
</html>
