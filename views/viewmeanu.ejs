<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Menus - Swiggy Style</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: #fc8019;
      --bg-color: #fffaf3;
      --card-bg: #fff;
      --text-color: #333;
      --border-color: #eee;
      --hover-bg: #fff3e0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg-color);
      margin: 0;
      padding: 0;
      color: var(--text-color);
    }

    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }

    .page-title {
      font-size: 2rem;
      font-weight: 600;
      color: var(--primary-color);
      margin-bottom: 25px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .page-title i {
      color: var(--primary-color);
    }

    .search-bar {
      margin-bottom: 20px;
      text-align: right;
    }

    #searchInput {
      width: 320px;
      padding: 10px 15px;
      font-size: 14px;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .table-wrapper {
      background-color: var(--card-bg);
      border-radius: 16px;
      box-shadow: 0 4px 18px rgba(0,0,0,0.07);
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background-color: #fff8ee;
    }

    th, td {
      padding: 16px;
      text-align: left;
      font-size: 15px;
      border-bottom: 1px solid var(--border-color);
    }

    th {
      font-weight: 600;
      color: #555;
    }

    tr:hover {
      background-color: var(--hover-bg);
    }

    td img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 10px;
      border: 1px solid #ddd;
    }

    .actions a {
      padding: 6px 12px;
      font-size: 13px;
      border-radius: 6px;
      margin-right: 5px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 5px;
      font-weight: 500;
    }

    .btn-warning {
      background-color: #ffe082;
      color: #5d4037;
    }

    .btn-warning:hover {
      background-color: #ffca28;
    }

    .btn-danger {
      background-color: #ff7043;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #ff3d00;
    }

    .no-data {
      text-align: center;
      padding: 40px;
      font-size: 17px;
      color: #999;
    }

    .icon {
      color: var(--primary-color);
    }
    
  </style>
</head>
<body>

  <div class="container">
    <h1 class="page-title"><i class="fas fa-utensils"></i> All Menu Items</h1>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="ðŸ” Search menu..." onkeyup="searchMenu(this.value)" />
    </div>

    <div class="table-wrapper">
      <% if (data.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th><i class="fas fa-utensils icon"></i> Menu</th>
            <th><i class="fas fa-layer-group icon"></i> Category</th>
            <th><i class="fas fa-tags icon"></i> Price</th>
            <th><i class="fas fa-align-left icon"></i> Description</th>
            <th><i class="fas fa-image icon"></i> Image</th>
            <th><i class="fas fa-cogs icon"></i> Actions</th>
          </tr>
        </thead>
        <tbody id="searchMenu">
          <% data.forEach(function(item, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.item_name %></td>
             <td><%= item.category_id %></td>
              <td>â‚¹ <%= item.price %></td>
              <td><%= item.description %></td>
              <td><img src="/uploads/<%= item.image %>" alt="Menu Image"></td>
              <td class="actions">
                <a href="/updatemenus?id=<%= item.id %>" class="btn-warning">
                  <i class="fas fa-edit"></i>Update
                </a>
                <a href="/deletemenus?id=<%= item.id %>" class="btn-danger" onclick="return confirm('Delete this menu?')">
                  <i class="fas fa-trash"></i>Delete
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
        <div class="no-data">ðŸ˜ž No menu items available</div>
      <% } %>
    </div>
  </div>

  <script src="/menuAjax.js"></script>
</body>
</html>
