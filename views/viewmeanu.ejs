<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Menus - Swiggy Style</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: #fc8019;
      --text-dark: #333;
      --bg-light: #f6f6f6;
      --card-bg: #ffffff;
      --border-color: #eaeaea;
    }

    /* body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg-light);
      margin: 0;
      padding: 0;
      color: var(--text-dark);
    } */

    .container {
      max-width: 1100px;
      margin: 40px auto;
      padding: 20px;
    }

    .page-title {
      text-align: left;
      font-size: 1.8rem;
      font-weight: 600;
      margin-bottom: 25px;
      color: var(--text-dark);
    }

    .search-bar {
      margin-bottom: 20px;
      text-align: right;
    }

    #searchInput {
      width: 300px;
      padding: 10px 15px;
      font-size: 14px;
      border: 1px solid var(--border-color);
      border-radius: 8px;
    }

    .table-wrapper {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background-color: #f9f9f9;
    }

    th, td {
      padding: 16px;
      text-align: left;
      border-bottom: 1px solid var(--border-color);
      font-size: 14px;
    }

    th {
      font-weight: 600;
      color: #555;
    }

    td img {
      width: 45px;
      height: 45px;
      border-radius: 8px;
      object-fit: cover;
    }

    .actions a {
      padding: 6px 12px;
      font-size: 13px;
      border-radius: 6px;
      margin-right: 5px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      transition: 0.2s;
    }

    .btn-warning {
      background-color: #ffe082;
      color: #222;
    }

    .btn-warning:hover {
      background-color: #ffca28;
    }

    .btn-danger {
      background-color: #ff8a80;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #ff5252;
    }

    .icon {
      margin-right: 6px;
    }

    .no-data {
      text-align: center;
      padding: 30px;
      font-size: 16px;
      color: #999;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1 class="page-title">üçΩÔ∏è All Menu Items</h1>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="üîç Search menu..." onkeyup="searchMenu(this.value)" />
    </div>

    <div class="table-wrapper">
      <% if (data.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th><i class="fas fa-utensils icon"></i>Menu</th>
            <th><i class="fas fa-layer-group icon"></i>Category</th>
            <th><i class="fas fa-tags icon"></i>Price</th>
            <th><i class="fas fa-align-left icon"></i>Description</th>
            <th><i class="fas fa-image icon"></i>Image</th>
            <th><i class="fas fa-cogs icon"></i>Actions</th>
          </tr>
        </thead>
        <tbody id="searchMenu">
          <% data.forEach(function(item, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.item_name %></td>
              <td><%= item.category_id %></td>
              <td>‚Çπ <%= item.price %></td>
              <td><%= item.description %></td>
              <td><img src="/uploads/<%= item.image %>" alt="Menu Image"></td>
              <td class="actions">
                <a href="/updatemenus?id=<%= item.id %>" class="btn-warning">
                  <i class="fas fa-edit icon"></i>Update
                </a>
                <a href="/deletemenus?id=<%= item.id %>" class="btn-danger" onclick="return confirm('Delete this menu?')">
                  <i class="fas fa-trash icon"></i>Delete
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
        <div class="no-data">üòû No menus found</div>
      <% } %>
    </div>
  </div>

  <script src="/menuAjax.js"></script>
</body>
</html>
