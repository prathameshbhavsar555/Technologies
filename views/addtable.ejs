<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Dining Table</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>
    .container {
      background-color: #fdfdfd;
      font-family: 'Inter', sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 20px;
    }

    .form-box {
      background: #ffffff;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 600px;
      border-top: 8px solid #fc8019;
      margin-bottom: 110px;
    }

    .form-box h2 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
      color: #333;
    }

    .form-label {
      font-weight: 600;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px;
      border: 1px solid #ddd;
    }

    .form-control:focus {
      border-color: #fc8019;
      box-shadow: 0 0 0 0.2rem rgba(252, 128, 25, 0.2);
    }

    .input-group-text {
      background: #fff;
      border: 1px solid #ddd;
      border-right: none;
      border-radius: 10px 0 0 10px;
      color: #fc8019;
    }

    .btn-primary {
      background-color: #fc8019;
      border: none;
      font-weight: 600;
      padding: 12px;
      border-radius: 10px;
      width: 100%;
    }

    .btn-primary:hover {
      background-color: #fc8019;
    }

    .message {
      text-align: center;
      margin-top: 15px;
      font-weight: 500;
    }
  </style>
</head>
<body>
<section class="container">
  <div class="form-box">
    <h2>Add Dining Table</h2>

    <form action="/addtableIndb" method="POST">

      <!-- Table ID -->
      <div class="mb-3">
        <label for="table_id" class="form-label">Table ID</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-chair"></i></span>
          <input type="number" class="form-control" id="table_id" name="table_id" required>
        </div>
      </div>

      <!-- Capacity -->
      <div class="mb-3">
        <label for="capacity" class="form-label">Capacity</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-users"></i></span>
          <input type="number" class="form-control" id="capacity" name="capacity" required>
        </div>
      </div>

      <!-- Availability Status -->
      <div class="mb-3">
        <label for="availability_status" class="form-label">Availability Status</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-toggle-on"></i></span>
          <select class="form-control" id="availability_status" name="availability_status" required>
            <option value="Available">Available</option>
            <option value="Occupied">Occupied</option>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>

      <% if (msg) { %>
        <div class="text-success message"><%= msg %></div>
      <% } %>

    </form>
  </div>
</section>
</body>
</html>
